
.detailCart-enter
  transform translateY(100%) !important
.detailCart-enter-active
  transition .3s all  linear !important
.detailCart-enter-to
  transform translateY(0) !important

.detailCart-leave
  transform translateY(0) !important
.detailCart-leave-active
  transition .3s all  linear !important
.detailCart-leave-to
  transform translateY(100%) !important

.mask-enter
  opacity 0
.mask-enter-active
  transition 1s opacity
.mask-enter-to
  opacity 1
.mask-leave
  opacity 1
.mask-leave-active
  transition 1s opacity
.mask-leave-to
  opacity 0